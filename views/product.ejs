<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>MyStreetWear App</title>
</head>
<style>
      h3 {
        font-size: 40px;
      }
      p {
          font-size: 24px;
      }
      .text {
        margin: auto;
      }

      .image {
        margin: auto;
      }

      .deleteAndEditRow {
        margin: auto;
        text-align: center;
      }
      
      .navbar-brand h4 {
      font-size: 1.8rem; /* Adjust the brand name size */
      }
      
      .navbar-nav  {
        font-size: 1.60rem; /* Adjust the nav link size */
      }
</style>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark ">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/images/mystreetwear.png" alt="Logo" style="width:150px;" class="rounded-pill">
      </a>
      <a class="navbar-brand" href="/"><h4>MyStreetWear</h4></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add new product</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/allProduct">All Product</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Category</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/category/1">Long Sleeve</a></li>
              <li><a class="dropdown-item" href="/category/2">Short Sleeve</a></li>
              <li><a class="dropdown-item" href="/category/3">Shorts</a></li>
              <li><a class="dropdown-item" href="/category/4">Long Bottom Wear</a></li>
              <li><a class="dropdown-item" href="/category/6">Cap</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    
    <div class="row ">
        <% if (product) { %> <!-- Check if product data exists -->
            <div class="col p-3 image">
              <img src = "<%= product.image %>" width="80%">
              <div class="deleteAndEditRow">
                <a href="/deleteProduct/<%= product.productId %>" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-secondary">Delete</a>
                <a href="/editProduct/<%= product.productId %>" class="btn btn-secondary">Edit</a>  
              </div>
            </div>
            <div class="col p-3 text">
                <h3><%= product.name %></h3>
                <h3>$S<%= product.price %></h3>
                <p><%= product.descript %></p>
                <p>Brand: <%= product.brand %></p>
                <p>Color: <%= product.color %></p>
                <p>Style: <%= product.style %></p>
                <a href ="/" type="button" class="btn btn-secondary">Back to Home</a>
                <a href ="/allProduct" type="button" class="btn btn-secondary">Back to Product</a>
            </div>
            
        <% } else { %>
            <p>No product found.</p>
        <% } %>
    </div>
    
</body>
</html>
