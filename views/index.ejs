<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>MyStreetWear App</title>
</head>

    <style>
      /* For make the carosel picture in one size */
      .carousel-inner img {
          height: 600px; /* or any fixed height */
          object-fit: cover; /* or `contain` to fit within the container */
      }
      
      /* For  the product */
      .product {
      margin-top: 40px;
      margin: 12px;
      width: 400px;
      }

      .product:hover {
      border: 1px solid #777;
      }

      .product img {
      width: auto;
      height: 300px;

      }

      .desc {
      padding: 15px;
      text-align: left;
      overflow: hidden; /* Hide overflow */
      white-space: nowrap; /* Prevent text from wrapping */
      text-overflow: ellipsis; /* Add ellipsis for overflow text */
      }

      /* Scroll container */
      .scroll-container {
      display: flex;
      overflow-x: auto; /* Enable horizontal scrolling */
      white-space: nowrap;
      padding: 20px;
      gap: 10px; /* Space between products */
      }

      /* Hide scrollbar */
      .scroll-container::-webkit-scrollbar {
      display: none; /* For Webkit browsers */
      }

      .scroll-container {
      -ms-overflow-style: none; /* For Internet Explorer and Edge */
      scrollbar-width: none; /* For Firefox */
      }

      .navbar-brand h4 {
      font-size: 1.8rem; /* Adjust the brand name size */
      }

      .navbar-nav  {
        font-size: 1.60rem; /* Adjust the nav link size */
      }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark ">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="images/mystreetwear.png" alt="Logo" style="width:150px;" class="rounded-pill">
      </a>
      <a class="navbar-brand" href="/"><h4>MyStreetWear</h4></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add new product</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/allProduct">All Product</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Category</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/category/1">Long Sleeve</a></li>
              <li><a class="dropdown-item" href="/category/2">Short Sleeve</a></li>
              <li><a class="dropdown-item" href="/category/3">Shorts</a></li>
              <li><a class="dropdown-item" href="/category/4">Long Bottom Wear</a></li>
              <li><a class="dropdown-item" href="/category/6">Cap</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  

  <!-- Carousel -->
  <div class="container mt-3">
      <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
          <!-- Indicators -->
          <div class="carousel-indicators">
              <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
              <div class="carousel-item active">
                  <img src="https://heraldodemexico.com.mx/u/fotografias/m/2022/3/29/f1280x720-494331_626006_2441.jpg" alt="Los Angeles" class="d-block w-100">
              </div>
              <div class="carousel-item">
                  <img src="https://th.bing.com/th/id/OIP.3q0YmXBpiEdzM7FdEVVInwHaEK?w=296&h=180&c=7&r=0&o=5&dpr=1.6&pid=1.7" alt="Chicago" class="d-block w-100">
              </div>
              <div class="carousel-item">
                  <img src="https://th.bing.com/th/id/OIP.z9th-miYdCugjjGVsX_wIwHaEK?w=321&h=180&c=7&r=0&o=5&dpr=1.6&pid=1.7" alt="New York" class="d-block w-100">
              </div>
          </div>

          <!-- Left and right controls -->
          <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
          </button>
      </div>
  </div>
  
  <!--Latest product-->
  <div class="container">
      <br>
      <div class="text-center"><h2>New Arrive Products</h2></div>
      <br>
  
      <div class="scroll-container">
        <% for(let i = 0; i < 10; i++) { %>
          <div class="product">
            <a href="/product/<%= products[i].productId %>"><img src="<%= products[i].image %>" alt="Product Image" width="600" height="400"></a>
            <div class="desc"><%= products[i].name %></div>
            <div class="desc">$S<%= products[i].price %></div>
          </div>
        <% } %>
      </div>
  </div>
  
  <!-- Hot selling-->
  <div class="container">
    <br>
    <div class="text-center"><h2>Hot Selling Products</h2></div>
    <br>

    <div class="scroll-container">
      <% for(let i = 10; i < 20; i++) { %>
        <div class="product">
          <a href="/product/<%= products[i].productId %>"><img src="<%= products[i].image %>" alt="Product Image" width="600" height="400"></a>
          <div class="desc"><%= products[i].name %></div>
          <div class="desc">$S<%= products[i].price %></div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
